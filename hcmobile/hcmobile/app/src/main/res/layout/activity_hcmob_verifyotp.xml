<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_regis"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="32dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="60dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/register_travel_transparent_background"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="30dp" >

        <com.garuda.hcmobile.font.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/transparent_button_selector"
            android:gravity="center"
            android:text="@string/verifyotp"
            android:textColor="@color/color_ga_header"
            android:textSize="34sp"
            app:typeface="robotoBold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <com.garuda.hcmobile.font.MaterialDesignIconsTextView
                style="@style/TextViewAppearance.Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:text="@string/material_icon_checked_full"
                android:textColor="@color/abc_input_method_navigation_guard"
                android:textSize="22dp" />

            <com.garuda.hcmobile.view.component.FloatLabeledEditText
                android:id="@+id/otp_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                app:fletFloatingHint="@string/otpnum"
                app:fletHintTextColor="@color/main_color_grey_700"
                app:fletSingleLine="true"
                app:fletTextBackground="@drawable/edit_text_background_accent"
                app:fletTextColor="@color/abc_input_method_navigation_guard" >
            </com.garuda.hcmobile.view.component.FloatLabeledEditText>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:layout_marginTop="12dp"
            android:gravity="right" >
            <com.garuda.hcmobile.font.RobotoTextView
                android:id="@+id/requestOTP"
                style="@style/ButtonStyle.RaisedEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/layout_bg"
                android:padding="8dp"
                android:minWidth="96dp"
                android:text="@string/requestotp"
                android:textColor="@color/white"
                app:typeface="robotoBold"/>
            <com.garuda.hcmobile.font.RobotoTextView
                android:id="@+id/verify"
                style="@style/ButtonStyle.RaisedEmpty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@drawable/layout_bg"
                android:padding="8dp"
                android:minWidth="96dp"
                android:text="@string/verify"
                android:textColor="@color/white"
                app:typeface="robotoBold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>