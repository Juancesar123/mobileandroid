<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/activity_lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >
            <com.garuda.hcmobile.font.RobotoTextView
                android:id="@+id/txt_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohon Maaf, untuk keamanan Slip anda dapat diminta kepada HC-Care."
                android:textColor="@color/white"
                android:textSize="16sp"
                app:typeface="robotoBlack" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_slip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="right"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical" >

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/spinnerYear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:ms_arrowColor="#0000FF"
                        app:ms_arrowSize="16dp"
                        app:ms_floatingLabelColor="#A9A9A9"
                        app:ms_floatingLabelText="Tahun"
                        app:ms_hint="Tahun"
                        app:ms_hintColor="#000000"
                        app:ms_multiline="true"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_month"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="right"
                    android:orientation="vertical" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >
                        <fr.ganfra.materialspinner.MaterialSpinner
                            android:id="@+id/spinnerMonth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:ms_arrowColor="#0000FF"
                            app:ms_arrowSize="16dp"
                            app:ms_floatingLabelColor="#A9A9A9"
                            app:ms_floatingLabelText="Bulan"
                            app:ms_hint="Bulan"
                            app:ms_hintColor="#000000"
                            app:ms_multiline="true"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <WebView
            android:id="@+id/web"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
</LinearLayout>